<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0" style="-fx-background-color: #AEDEA7;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.botecofx.PagamentoFormView">
   <children>
      <Label fx:id="lbValorRestante" text="Label">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label text="Digite o quanto deseja pagar R$ ">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <TextField alignment="CENTER" maxWidth="400.0" prefWidth="200.0" promptText="Informe a quantia">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onConfirmar" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #025020; -fx-text-fill: white;" text="Confirmar">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onCancelar" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: A80800; -fx-text-fill: white;" text="Cancelar">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
